<div class="container" style='margin-top: 5%;'>
  <div class="well">
    <%= link_to 'New Pen', new_product_path(:product_type => "Pen"), remote: true, class: "btn btn-primary" %>
    <%= link_to 'New Notebook', new_product_path(:product_type => "Notebook"), remote: true, class: "btn btn-primary" %>
  </div>


  <p id="notice"><%= notice %></p>
  <div class="new-product"></div>
  
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Color</th>
        <th>Product status</th>
        <th>Inward date</th>
        <th>Product type</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody class="product-index">
      <%= render "index" %>
    </tbody>
  </table>
</div>
<div id="product-modal" class="modal fade"></div>
