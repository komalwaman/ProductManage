<% @products.each do |product| %>
  <tr class="active">
    <td><%= product.name %></td>
    <td><%= product.price %></td>
    <td><%= product.colour %></td>
    <td><%= product.is_available %></td>
    <td><%= product.inward_date %></td>
    <td><%= product.product_type %></td>
    <td><%= product.description %></td>
    <td><%= link_to 'Edit', edit_product_path(product), remote: true, class: "btn btn-default" %></td>
    <td><%= link_to 'Delete', product_delete_path(product), remote: true, class: "btn btn-danger" %></td>
  </tr>
<% end %>
<tr>
  <td colspan="5">Total Pen Price: <%= Product.price_sum('Pen')%></td>
  <td colspan="4">Total Notebook Price: <%= Product.price_sum('Notebook')%></td>
</tr>
